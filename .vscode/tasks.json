{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üîÑ Real-time: Repository Sync Check",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "sync:check:quick"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [
        {
          "owner": "repository-sync",
          "fileLocation": "relative",
          "pattern": {
            "regexp": "^\\s*[‚ö†Ô∏è‚ùå‚ÑπÔ∏è]\\s+(.*):(\\d+)\\s*$",
            "file": 1,
            "line": 2,
            "severity": "warning",
            "message": "Repository sync issue detected"
          }
        }
      ],
      "detail": "Run real-time repository synchronization check on workspace open"
    },
    {
      "label": "üîÑ Real-time: Watch for Changes",
      "type": "shell",
      "command": "node",
      "args": [
        "tools/scripts/validation/repository-sync-checker.js",
        "--watch"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [
        {
          "owner": "repository-sync-watcher",
          "fileLocation": "relative",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "üîÑ Repository Synchronization Checker",
            "endsPattern": "üéâ Analysis completed"
          },
          "pattern": {
            "regexp": "^\\s*[‚ö†Ô∏è‚ùå‚ÑπÔ∏è]\\s+(.*):(\\d+)\\s*$",
            "file": 1,
            "line": 2,
            "severity": "warning",
            "message": "Repository sync issue detected"
          }
        }
      ],
      "detail": "Watch files and run repository sync checks on changes"
    },
    {
      "label": "üîß Real-time: Fix All Issues",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "npm run lint:fix && npm run check:imports:fix && npm run check:deps:fix"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [
        "$eslint-stylish",
        "$tsc"
      ],
      "detail": "Auto-fix all detectable repository sync issues"
    },
    {
      "label": "üîç Real-time: Git Consistency Check",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "git status --porcelain && git diff --name-only --diff-filter=U && git status -uno"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
