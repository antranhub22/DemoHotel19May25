# Development Environment Variables

# Database - Using SQLite for development
DATABASE_URL=sqlite://./apps/dev.db

# JWT Configuration
JWT_SECRET=unified-auth-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Development Settings
NODE_ENV=development
PORT=10000
AUTO_MIGRATE=true
SEED_USERS=true
AUTO_DB_FIX=true

# OpenAI API Key (placeholder for development)
VITE_OPENAI_API_KEY=sk-placeholder-for-dev

# Vapi Configuration (placeholders)
VITE_VAPI_PUBLIC_KEY=your-vapi-public-key
VITE_VAPI_ASSISTANT_ID=your-vapi-assistant-id

# Multi-language Vapi Configuration
VITE_VAPI_PUBLIC_KEY_FR=your-vapi-public-key-fr
VITE_VAPI_ASSISTANT_ID_FR=your-vapi-assistant-id-fr
VITE_VAPI_PUBLIC_KEY_ZH=your-vapi-public-key-zh
VITE_VAPI_ASSISTANT_ID_ZH=your-vapi-assistant-id-zh
VITE_VAPI_PUBLIC_KEY_RU=your-vapi-public-key-ru
VITE_VAPI_ASSISTANT_ID_RU=your-vapi-assistant-id-ru
VITE_VAPI_PUBLIC_KEY_KO=your-vapi-public-key-ko
VITE_VAPI_ASSISTANT_ID_KO=your-vapi-assistant-id-ko
VITE_VAPI_PUBLIC_KEY_VI=your-vapi-public-key-vi
VITE_VAPI_ASSISTANT_ID_VI=your-vapi-assistant-id-vi

# Email Configuration (optional)
EMAIL_FROM=noreply@minhonhotel.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password