{
  "include": [
    "apps/client/src/**/*",
    "packages/shared/**/*",
    "apps/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    ".backup/**/*",
    "packages/auth-system/**/*"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": false,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client",
      "react",
      "react-dom"
    ],
    "paths": {
      "@/*": [
        "./apps/client/src/*"
      ],
      "@shared/*": [
        "./packages/shared/*"
      ],
      "@server/*": [
        "./apps/server/*"
      ],
      "@types/*": [
        "./packages/types/*"
      ],
      "@config/*": [
        "./packages/config/*"
      ],
      "@tools/*": [
        "./tools/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    },
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitOverride": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}