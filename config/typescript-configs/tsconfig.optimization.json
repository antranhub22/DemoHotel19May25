{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",

    // ğŸš€ Performance optimizations
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // ğŸ’¾ Memory optimizations
    "preserveWatchOutput": true,
    "assumeChangesOnlyAffectDirectDependencies": true,

    // ğŸ” Better error reporting without breaking builds
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,

    // ğŸ“¦ Bundle optimization
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,

    // ğŸ›¡ï¸ Strict but safe
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,

    // ğŸ¯ Modern ES features for better performance
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // ğŸ“Š Skip lib checks to speed up compilation
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },

  "include": ["apps/**/*", "packages/**/*", "tools/**/*"],

  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**/*"
  ]
}
